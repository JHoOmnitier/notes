      bison \
      libkrb5-dev \
      libsasl2-dev \
      libnuma-dev \
      pkg-config \
      libssl-dev

cd fbthrift/thrift/
./build/deps_ubuntu_14.04.sh
autoreconf -if
./configure
make

# mcrouter
