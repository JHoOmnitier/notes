# folly
git clone https://github.com/google/double-conversion.git
  cd double-conversion
  cmake -DBUILD_SHARED_LIBS=ON .
  make
  sudo make install

git clone https://github.com/facebook/folly.git
autoreconf -ivf
  ./configure
  make
  make check
  sudo make install

# wangle
git clone https://github.com/facebook/wangle.git
cd wangle/wangle
cmake .
make
ctest
sudo make install
